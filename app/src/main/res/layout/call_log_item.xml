<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="5dp"
    app:strokeColor="@android:color/darker_gray"
    app:strokeWidth="1dp"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/phone_number_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91987654321"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/incoming_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="incoming"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/white"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number_title_tv"
            android:layout_marginBottom="2dp"
            android:text="Date: Tuesday 12 September 2023 11:12:26 | Dur: 88s"/>
        <TextView
            android:id="@+id/from_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_text"
            android:text="From: +9198764563"/>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="4dp"
            android:layout_below="@id/from_text"/>
        <LinearLayout
            android:id="@+id/control_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mic"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:backgroundTint="@android:color/holo_red_light" />
            <TextView
                android:id="@+id/call_log_file_tv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_btn"
                android:padding="8dp"
                android:src="@drawable/ic_play_arrow"/>
        </LinearLayout>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>